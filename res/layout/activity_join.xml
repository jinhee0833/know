<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/helloants_white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.helloants.mm.helloants1.activity.login.Join">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/helloants_yellow"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageButton
                    android:id="@+id/img_btn_aif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@color/helloants_yellow"
                    android:padding="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/img_btn_aif"
                    android:padding="8dp"
                    android:text="헬로앤츠 가입하기"
                    android:textColor="@color/helloants_black"
                    android:textSize="12pt"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="계정정보를 입력해 주세요."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/helloants_green"
                android:textStyle="bold" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel">

                <EditText
                    android:id="@+id/edit_id_join"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="이메일"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:textColor="@color/helloants_black"
                    android:textColorHint="@color/helloants_black"
                    android:textSize="9pt"
                    android:theme="@style/EditTextColor" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel">

                <EditText
                    android:id="@+id/edit_pw_join"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="비밀번호"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textColor="@color/helloants_black"
                    android:textColorHint="@color/helloants_black"
                    android:textSize="9pt"
                    android:theme="@style/EditTextColor" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel">

                <EditText
                    android:id="@+id/edit_pwcheck_join"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="비밀번호 확인"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textColor="@color/helloants_black"
                    android:textColorHint="@color/helloants_black"
                    android:textSize="9pt"
                    android:theme="@style/EditTextColor" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="개인정보를 입력해 주세요."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/helloants_green"
                android:textStyle="bold" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel">

                <EditText
                    android:id="@+id/edit_name_join"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="이름"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/helloants_black"
                    android:textColorHint="@color/helloants_black"
                    android:textSize="9pt"
                    android:theme="@style/EditTextColor" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel">

                <EditText
                    android:id="@+id/edit_birth_join"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="생년월일 ex)860324"
                    android:inputType="date"
                    android:padding="10dp"
                    android:textColor="@color/helloants_black"
                    android:textColorHint="@color/helloants_black"
                    android:textSize="9pt"
                    android:theme="@style/EditTextColor" />
            </android.support.design.widget.TextInputLayout>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checkedButton="@+id/radio_male_join"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <RadioButton
                    android:id="@+id/radio_male_join"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="남자"
                    android:textColor="@color/helloants_black" />

                <RadioButton
                    android:id="@+id/radio_fmale_join"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="여자"
                    android:textColor="@color/helloants_black" />
            </RadioGroup>

            <TextView
                android:id="@+id/txv_agreement_join"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="30dp"
                android:paddingLeft="10dp"
                android:paddingTop="30dp"
                android:text="@string/agreement"
                android:textColor="@color/helloants_black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">

                <Button
                    android:id="@+id/btn_cancle_join"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/joinbtn"
                    android:text="취소하기"
                    android:textColor="@color/helloants_black" />

                <Button
                    android:id="@+id/btn_join_join"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/joinbtn"
                    android:text="가입하기"
                    android:textColor="@color/helloants_black" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>