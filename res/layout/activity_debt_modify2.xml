<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/layout_dif2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/helloants_yellow"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/img_btn_dif2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/helloants_yellow"
            android:padding="8dp" />

        <TextView
            android:id="@+id/txv_title_dif2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_btn_dif2"
            android:padding="8dp"
            android:textColor="#000"
            android:textSize="12pt" />

    </RelativeLayout>
    <Button
        android:id="@+id/btn_insertdebt_debtinsertfrag2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="부채 초기값 입력"
        android:layout_centerInParent="true"/>
</RelativeLayout>
