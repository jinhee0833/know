<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sv_root_edit_salary_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_editsalary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/helloants_yellow"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/img_btn_editsalary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/helloants_yellow"
                android:padding="8dp" />

            <TextView
                android:id="@+id/txv_title_editsalary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img_btn_editsalary"
                android:padding="8dp"
                android:textColor="#000"
                android:textSize="12pt"
                android:textStyle="bold" />

        </RelativeLayout>


        <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="3dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="월급날(용돈날) 수정"
                    android:textAlignment="center"
                    android:textSize="10pt" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/npik_salarydate_editsalary"
                        android:text="월급날 : " />

                    <NumberPicker
                        android:id="@+id/npik_salarydate_editsalary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_centerInParent="true"></NumberPicker>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/npik_salarydate_editsalary"
                        android:text="일" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/npik_carddate_cardoffset"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/helloants_gray2" />

                <Button
                    android:id="@+id/btn_next_editsalary2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/helloants_yellow"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="수정" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardview_card_modify_edit_salary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="3dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="카드정산일 수정"
                    android:textAlignment="center"
                    android:textSize="10pt" />

                <LinearLayout
                    android:id="@+id/linear_cardoffset_editsalary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txv"
                    android:orientation="vertical"></LinearLayout>

                <Button
                    android:id="@+id/btn_next_editsalary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/helloants_yellow"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="수정" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="3dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="한달 예산을 얼마로 하시겠습니까?"
                    android:textColor="@color/helloants_gray"
                    android:textSize="10pt" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:theme="@style/TextLabel">

                    <EditText
                        android:id="@+id/edit_budget_salarymodify"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="예산을 입력해 주세요. ex)500000"
                        android:inputType="number"
                        android:padding="10dp"
                        android:textColor="@color/helloants_black"
                        android:textColorHint="@color/helloants_black"
                        android:textSize="9pt"
                        android:theme="@style/EditTextColor" />
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/btn_next_budget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/helloants_yellow"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="수정" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>