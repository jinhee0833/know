<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.helloants.mm.helloants1.activity.mypage.CardModify">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/piki_gray">

        <RelativeLayout
            android:id="@+id/layout_cardmodify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/helloants_yellow"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/img_btn_cardmodify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/helloants_yellow"
                android:padding="8dp" />

            <TextView
                android:id="@+id/txv_title_cardmodify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img_btn_cardmodify"
                android:padding="8dp"
                android:textColor="#000"
                android:textSize="12pt"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txv_checkcard_cardmodify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="체크카드"
            android:textColor="@color/helloants_black"
            android:textSize="10pt" />

        <LinearLayout
            android:id="@+id/checkcard_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"></LinearLayout>

        <TextView
            android:id="@+id/txv_creditcard_cardmodify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="신용카드"
            android:textColor="@color/helloants_black"
            android:textSize="10pt" />

        <LinearLayout
            android:id="@+id/creditcard_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"></LinearLayout>
    </LinearLayout>
</ScrollView>