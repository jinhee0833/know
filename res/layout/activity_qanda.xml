<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/helloants_white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_qanda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/helloants_yellow"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/img_btn_qanda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/helloants_yellow"
            android:padding="8dp" />

        <TextView
            android:id="@+id/txv_title_qanda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_btn_qanda"
            android:padding="8dp"
            android:textColor="#000"
            android:textSize="12pt"
            android:textStyle="bold"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/txv_empty_text_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="문의 내용이 있으시면 우측 하단 버튼을 클릭해주세요"
            android:textColor="@color/helloants_gray" />

        <ListView
            android:id="@+id/qanda_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"></ListView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/qanda_insert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/joinbtn"
                android:padding="10dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/helloants_black" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>